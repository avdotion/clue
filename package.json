{
  "name": "clue",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://avdotion.github.io/clue",
  "dependencies": {
    "crypto-es": "^1.1.1",
    "normalize.css": "^8.0.1",
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "react-scripts": "3.2.0",
    "reshadow": "0.0.1-alpha.70"
  },
  "devDependencies": {
    "typescript": "3.6.4",
    "@types/jest": "24.0.20",
    "@types/node": "12.11.7",
    "@types/react": "16.9.11",
    "@types/react-dom": "16.9.3",
    "husky": "^3.0.9",
    "lint-staged": "^9.4.2",
    "gh-pages": "^2.1.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ],
    "rules": {
      "object-curly-spacing": [
        "error",
        "never"
      ],
      "semi": [
        "error",
        "always"
      ],
      "max-len": [
        "error",
        {
          "code": 80
        }
      ]
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json}": [
      "./node_modules/.bin/eslint",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
